      let hours = dateObj.getHours();
      let minutes = dateObj.getMinutes();
      if (parseInt(minutes) < 10){
        minutes = "0" + minutes
      }
      let local_time = hours + ':' + minutes; %>
      <%= local_time %> </span></div>
    <% 
    let ans_count = 0;
    let usr_count = 0;
    let label_count = 0;
    for(var i=0; i < cnt; i++) {
      
      if(i % 2 == 1) { %>
    <div class="message sol">
