<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>
    <script type="text/javascript">
    let time_obj = undefined;
    let flag = undefined;
    window.onload = () => {
        time_obj = document.getElementById("timer");
        flag = false;
    };

    function double_submit_check() {
        if (flag) {
            console.log("double");
            return true;
        } else {
            flag = true;
            return false;
        }
    }

    function enterEvent(){
      send_req();
      
    }
    function send_req() {
        if (double_submit_check()) {
            return;
        }

        let chatting = document.getElementById("chat_input").value;
        

        if (chatting == '') {
            document.getElementById('warning').innerText = 'Please fill the text!';
            flag = false;
            return;
        }

        const url = "/chat";
        let start = 0;
        

        // timer

        timer = setInterval(() => {
            start += 1;
            time_obj.innerText = `${start / 10} 's`;
        }, 100);
        axios({
          url: url,
          method: 'post',
          data: {
            user: chatting
          }
        })
        .then(response => {
         clearInterval(timer);
         time_obj.innerText = 'Done!';
         flag = false;
         window.location.reload(true);
        })
        .catch(err => {
          clearInterval(timer);
          flag = false;
          document.getElementById('warning').innerText = err;
        })
    }
    </script>
