      <div class="messageText" data-time= "<%= time[i] %>" >
        <%= ans[ans_count] %>
      </div>
    </div>
    <div class="feel_lisa ">
      <%= label[label_count] %>
      </div>
    <% ans_count += 1;
      label_count += 1;
    console.log(ans_count + "ans count")}
    if(i % 2 == 0) { %>
      <div class="message sag mtLine">
      <div class="messageText" data-time="<%= time[i] %>">
        <%= user[usr_count] %>
      </div>
      <div class="resim" style="background-image: url('https://cdn.pixabay.com/photo/2016/02/22/08/51/paper-1214993_960_720.jpg');"></div>
    </div>
    
      <% usr_count += 1;} } %>
    
   
